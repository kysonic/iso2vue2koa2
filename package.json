{
  "name": "iso2vue2koa2",
  "version": "0.0.1",
  "description": "Isomorphic vue2+koa2 application",
  "main": "bin/www",
  "author": "Miroshnichenko Anton",
  "license": "MIT",
  "scripts": {
    "init": "yarn install",
    "dev": "yarn run build:dev && cross-env NODE_ENV=dev node ./bin/www",
    "dev:cache": "yarn run build:dev && cross-env NODE_ENV=dev USE_CACHE=true node ./bin/www",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "build": "rm -rf ./build && yarn run build:client && yarn run build:server && yarn run build:app",
    "build:dev": "rm -rf ./build && yarn run build:client:dev && yarn run build:server:dev",
    "build:client": "webpack --config ./webpack/webpack.client.prod.js",
    "build:server": "webpack --config ./webpack/webpack.server.prod.js",
    "build:client:dev": "webpack --config ./webpack/webpack.client.dev.js",
    "build:server:dev": "webpack --config ./webpack/webpack.server.js",
    "build:app": "webpack --config ./webpack/webpack.app.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^0.28.8",
    "eslint-config-esnext": "^2.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-vue": "^4.2.0",
    "extract-text-webpack-plugin": "2.1.2",
    "json-loader": "^0.5.7",
    "koa-webpack-dev-middleware": "^2.0.2",
    "koa-webpack-hot-middleware": "^1.0.3",
    "mime": "^2.2.0",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "vue": "^2.5.13",
    "vue-loader": "^13.6.2",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vue-template-compiler": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "webpack": "^3.10.0",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "chokidar": "^2.0.0",
    "cross-env": "^5.1.3",
    "file-loader": "^1.1.6",
    "koa": "^2.4.1",
    "koa-convert": "^1.2.0",
    "koa-favicon": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "lru-cache": "^4.1.1",
    "memory-fs": "^0.4.1"
  }
}
